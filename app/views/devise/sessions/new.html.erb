<section class="max-w-screen-sm mx-auto lg:mt-8">
    <h2 class="text-2xl">Log in</h2>

    <div class="mt-4">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), defaults: { input_html: {class: 'form-input mt-1'}, wrapper_html: {class: 'flex flex-col my-3'}}) do |f| %>
        <div class="form-inputs">
            <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, input_html: {class: 'form-checkbox mr-2'}, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions mt-4">
            <%= f.button :submit, "Log in", class: 'p-2 rounded-md bg-gray-400' %>
        </div>
        <% end %>


        <hr class="mt-8" />
        <div class="mt-4 flex justify-between items-baseline w-full">
            <%= render "devise/shared/links" %>
        </div>

    </div>
</section>
